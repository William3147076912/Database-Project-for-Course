<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qwq.resource.mapper.VideoMapper">

    <resultMap type="Video" id="VideoResult">
        <result property="VideoId"    column="resource_id"    />
        <result property="videoName"    column="resource_name"    />
        <result property="filePath"    column="file_path"    />
    </resultMap>
    <select id="SelectVideoById" parameterType="Integer" resultMap="VideoResult">
        select resource_id,resource_name,file_path from resource where resource_id = #{videoId}
    </select>
</mapper>